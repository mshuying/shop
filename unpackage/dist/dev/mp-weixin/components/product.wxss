.product {
  margin-top: 10rpx;
  width: 100%;
  height: 550rpx;
  background-color: #FFFFFF;
  padding: 20rpx 30rpx;
}
.product image {
  width: 100%;
  height: 400rpx;
  -webkit-border-radius: 20rpx;
          border-radius: 20rpx;
  background-color: #F0AD4E;
}
.product .content-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #333333;
}
.product .content {
  width: 100%;
  height: 60rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.product .content .price {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
          flex: 2;
  color: #e53131;
  font-size: 24rpx;
}
.product .content .number {
  -webkit-box-flex: 8;
  -webkit-flex: 8;
          flex: 8;
  color: #adadad;
  font-size: 24rpx;
}
.product .content .purchase {
  text-align: center;
  width: 140rpx;
  height: 48rpx;
  line-height: 48rpx;
  background-color: #ffc868;
  -webkit-border-radius: 20rpx 0rpx 20rpx 20rpx;
          border-radius: 20rpx 0rpx 20rpx 20rpx;
  font-size: 22rpx;
  color: #333333;
}


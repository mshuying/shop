.goods {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 100%;
  height: 180rpx;
  background-color: #FFFFFF;
  padding: 20rpx;
}
.goods .image {
  width: 208rpx;
  height: 140rpx;
  margin-right: 20rpx;
}
.goods .image image {
  width: 100%;
  height: 100%;
}
.goods .content {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  height: 100%;
}
.goods .content .name {
  font-size: 28rpx;
}
.goods .content .spec {
  font-size: 22rpx;
  color: #a0a0a0;
  margin-top: 10rpx;
}
.goods .content .price-num {
  position: relative;
  margin-top: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.goods .content .price-num .price {
  font-size: 22rpx;
  color: #e53131;
}
.goods .content .price-num .num {
  position: absolute;
  right: 0px;
  font-size: 24rpx;
  color: #666;
}
.goods .content .price-num .num text {
  display: inline-block;
}
.goods .content .price-num .num .but {
  width: 48rpx;
  height: 48rpx;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  text-align: center;
  line-height: 48rpx;
  background-color: #f2f3f5;
}
.goods .content .price-num .num .total {
  margin: 0 18rpx;
}


.goods-number {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 100%;
  height: 65rpx;
  font-size: 22rpx;
  color: #333333;
  background-color: #f2f3f5;
  position: relative;
}
.goods-number .icon {
  width: 10rpx;
  height: 28rpx;
  background-color: #4ca0ff;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  margin-left: 30rpx;
  margin-right: 15rpx;
}
.goods-number .delete {
  font-size: 28rpx;
  color: #666666;
  position: absolute;
  top: 17rpx;
  right: 30rpx;
}
.cart-goods {
  margin-bottom: 20rpx;
}

